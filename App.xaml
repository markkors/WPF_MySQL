<Application x:Class="WPF_MySQL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_MySQL.Controllers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:Quiztime x:Key="QuiztimeController" />
        <local:TestController x:Key="TestController" />

        <Style x:Key="cmbBG1"
               TargetType="ComboBox">
            <Setter Property="Background"
                    Value="Bisque" />
            
        </Style>

        <Style x:Key="btnBG1"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Bisque" />
        </Style>
               
        
    </Application.Resources>
</Application>
